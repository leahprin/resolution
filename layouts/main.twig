<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en-US">
<head>
	<meta charset="utf-8" />
	<title>{% if title is defined %}{{ title }} - {% endif %}{{ siteName }}</title>
	<link rel="home" href="{{ siteUrl }}" />

	<link rel="stylesheet" href="/static/css/index.css" type="text/css" media="all">
	<link href="https://fonts.googleapis.com/css?family=Raleway:400,500,600,700,900|Playfair:700" rel="stylesheet">

	<style>
		body, .body, p {
			font-family: "Raleway", sans-serif;
		}
		h1, h2, h3, h4, h5 {
			font-family: "Playfair", serif !important;
		}
	</style>
</head>

<body>
<div id="container">
	{% set channels = craft.categories.group('channels') %}

	{% set channelObject = [] %}

	{% for channel in channels %}
		{% set channelObject = channelObject|merge({(channel|lower ~ ''): ('channel-' ~ loop.index)})  %}
	{% endfor %}

	{% set blogs = craft.categories.group('blogs') %}

	{% set blogObject = [] %}

	{% for blog in blogs %}
		{% set blogObject = blogObject|merge({(blog.slug|lower ~ ''): ('blog-' ~ loop.index)})  %}
	{% endfor %}

	{% include '_elements/_header.twig' %}

	<main id="content" role="main">
		{{ this.blocks['content'] }}
	</main>

	<div class="modal" role="dialog">
		<div class="modal-dialog modal-extlg" role="document">
			<div class="modal-content social-modal">
			</div>
		</div>
	</div>

	{% include '_elements/_footer.twig' %}
</div>

{% include '_elements/_javascript.twig' %}
</body>
</html>
