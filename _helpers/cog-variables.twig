{% set cardType = '' %}
{% set postText = '' %}
{% set author = '' %}
{% set network = '' %}
{% set headline = '' %}
{% set author = '' %}
{% set socialLink = '' %}
{% set articleBody = '' %}
{% set networkData = _Network.getNetworkData() %}


{# ARTICLE Variables #}
{% if article.articleId > 0 %}
	{% set cardType = 'article' %}
	{% set headline = article.title %}
	{% set text = article.excerpt %}
	{% set author = article.createdBy %}
	{% set articleBody = entry.articleBody %}
	{% set link = article.url %}
	{% set authorImage = _Media.getMediaUrl(article.createdBy['media'],100,100,{crop:'thumb', gravity:'face', radius:'max'} ) %}
	{% set thumbnail = '' %}
{# SOCIAL Variables #}
{% else %}
	{% set cardType = 'social' %}
	{% set author = entry.socialAuthor %}
	{% set network = entry.socialNetwork %}
	{% set socialLink = entry.socialLink %}
{% endif %}


{% block content %}
{% endblock %}
