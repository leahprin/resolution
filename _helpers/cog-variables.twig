{% set cardType = '' %}
{% set postText = '' %}
{% set author = '' %}
{% set network = '' %}
{% set headline = '' %}
{% set author = '' %}
{% set socialLink = '' %}
{% set articleBody = '' %}


{# ARTICLE Variables #}
{% if article.articleId > 0 %}
	{% set cardType = 'article' %}
	{% set headline = entry.title %}
	{% set author = entry.author.fullName %}
	{% set articleBody = entry.articleBody %}
{# SOCIAL Variables #}
{% else %}
	{% set cardType = 'social' %}
	{% set author = entry.socialAuthor %}
	{% set network = entry.socialNetwork %}
	{% set socialLink = entry.socialLink %}
{% endif %}


