<footer class="footer">
    <div class="footer__container">
        <div class="footer__info-mobile">
            <a href="#" class="footer__logo"><img src="/static/images/logo.svg"/></a>
            <div class="footer__social-links">
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-youtube-play"></i></a>
                <a href="#"><i class="fa fa-google-plus"></i></a>
                <a href="#"><i class="fa fa-facebook-f"></i></a>
            </div>
            <a class="footer__additional-links" href="/contact">Contact Us</a>
            <a class="footer__additional-links" href="#">Privacy Policy</a>
            <a class="footer__additional-links" href="#">Terms & Conditions</a>
        </div>

        <div class="footer__desktop">
            <div class="footer__left">
                <a href="/" class="footer__logo"><img src="/static/images/logo.svg"/></a>
                <div class="footer__navigation">
                    <div class="header__navigation-row">
                        <ul class="header__navigation-list">
                            {% set entries = craft.categories.group('channels') %}
                            {% for i in 0..4 %}
                                {% set entry = entries[i] %}
                                <li class="header__navigation-item">
                                    <a href="{{ entry.url }}" class="header__navigation-link header__navigation-item--{{ entry.title|lower }} {{ channelObject[entry.title|lower] }}">
                                        {{ entry.title }}
                                    </a>
                                </li>
                            {% endfor %}
                            {% if entries[5] is defined %}
                                <li class="header__navigation-item dropdown">
                                    <a href="#" class="header__navigation-link dropdown-toggle" type="button" id="dropdown1" data-toggle="dropdown" aria-expanded="false" aria-haspopup="true">
                                        More Channels <i class="fa fa-angle-down"></i>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdown1">
                                        {% for i in 5..(entries|length - 1)%}
                                            {% set entry = entries[i] %}
                                            <li class="header__navigation-item--{{ entry.title|lower }} {{ channelObject[entry.title|lower] }}"><a href="{{ entry.url }}" class="">{{ entry.title }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </li>

                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer__right">
                <div class="footer__additional-links">
                    <div class="footer__social-links">
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-youtube-play"></i></a>
                        <a href="#"><i class="fa fa-google-plus"></i></a>
                        <a href="#"><i class="fa fa-facebook-f"></i></a>
                    </div>
                    <a class="footer__additional-links" href="/contact">Contact Us</a>
                    <a class="footer__additional-links" href="#">Privacy Policy</a>
                    <a class="footer__additional-links" href="#">Terms & Conditions</a>
                </div>
            </div>
        </div>
    </div>
    <div class="footer__container">
        <div class="footer__copyright">Â© All rights reserved</div>
    </div>
</footer>
